  <body class="schedule-body">
    <h1 class="title-div" onclick="noNewTab()">the health project...</h1>
    <div class="schedule-options" id="schedule-options">
      <div id="schedule-options-content">
        <h5 class="add-workout-title">Add Workout</h5>
        <label for="suggested-workouts">Suggested workouts?</label>
        <input
          type="checkbox"
          id="suggested-workouts"
          name="suggested-workouts"
        /><br />

        <label for="workout-name">Workout Name</label>
        <input
          name="workout-name"
          id="workout-name"
          class="workout-input"
          type="text"
          placeholder="Chest Press..."
        />
        <br />
        <label for="number-of-sets">Number of Sets:</label>
        <select
          id="number-of-sets"
          name="number-of-sets"
          class="workout-options"
        >
          <option value=""></option>
          <option value="1">1 Set</option>
          <option value="2">2 Sets</option>
          <option value="3">3 Sets</option>
          <option value="4">4 Sets</option>
          <option value="5">5 Sets</option>
          <option value="6">6 Sets</option>
          <option value="7">7 Sets</option>
          <option value="8">8 Sets</option></select
        ><br />
        <label for="number-of-reps">Number of Reps:</label>
        <select
          id="number-of-reps"
          name="number-of-reps"
          class="workout-options"
        >
          <option value=""></option>
          <option value="6">6 Reps</option>
          <option value="8">8 Reps</option>
          <option value="12">12 Reps</option>
          <option value="failure">Until Failure</option></select
        ><br />
        <label for="duration">Duration (min):</label>
        <input
          class="duration-input"
          type="number"
          name="duration"
          id="workout-duration"
          placeholder="5 min..."
        />
        <button
          id="workout-submit-button"
          class="btn btn-success"
          type="submit"
        >
          Add Workout
        </button>
      </div>
    </div>
